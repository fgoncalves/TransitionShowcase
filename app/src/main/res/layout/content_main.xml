<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.fred.transitionshowcase.MainActivity">

    <Button
        android:id="@+id/view_normal_animation_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/views_normal_animation_button_text"/>

    <Button
        android:id="@+id/view_resize_animation_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_normal_animation_button"
        android:text="@string/views_resize_animation_button_text"/>

    <Button
        android:id="@+id/activity_animation_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_resize_animation_button"
        android:text="@string/activity_animation_button_text"/>

    <Button
        android:id="@+id/dialog_fragment_animation_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_animation_button"
        android:text="@string/fragment_animation_button_text"/>

    <ImageView
        android:id="@+id/android_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/android"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:transitionName="androidIcon"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
